<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit profile"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keep your details up to date."
            android:textSize="16sp"
            android:textColor="#7C8796"
            android:layout_marginTop="4dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E7EB"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Full name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full name"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
        <EditText
            android:id="@+id/etFullName"
            android:background="@drawable/bg_card_inset"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:hint="Jane E. Vynk"
            android:layout_marginBottom="14dp" />

        <!-- Phone -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
        <EditText
            android:id="@+id/etPhone"
            android:background="@drawable/bg_card_inset"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:hint="07XXXXXXXX"
            android:layout_marginBottom="24dp" />

        <!-- Primary actions -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Save changes"
            android:textAllCaps="false"
            android:backgroundTint="#CD7434" />

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Cancel"
            android:textAllCaps="false" />

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <!-- Danger zone -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danger zone"
            android:textStyle="bold"
            android:textColor="#991B1B"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnDeactivate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Deactivate account"
            android:textAllCaps="false"
            android:backgroundTint="#EF4444" />
    </LinearLayout>
</ScrollView>
