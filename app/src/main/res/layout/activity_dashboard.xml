<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            style="@style/TextAppearance.EVynk.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Overview"
            android:letterSpacing="0.01"
            android:textSize="22sp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            style="@style/TextAppearance.EVynk.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Welcome back!"
            android:textColor="@color/textMuted" />

        <!-- Profile card -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.EVynk.MaterialCard"
            android:layout_width="match_parent"
            android:background="@drawable/bg_card_inset"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/TextAppearance.EVynk.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textStyle="bold"
                    android:textColor="@color/textSecondary" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/divider" />

                <!-- Full name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full name"
                    android:textColor="@color/textMuted"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvName"
                    style="@style/TextAppearance.EVynk.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/textPrimary"
                    android:layout_marginBottom="10dp" />

                <!-- NIC -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NIC"
                    android:textColor="@color/textMuted"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvNicValue"
                    style="@style/TextAppearance.EVynk.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/textPrimary"
                    android:layout_marginBottom="10dp" />

                <!-- Email -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="@color/textMuted"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvEmail"
                    style="@style/TextAppearance.EVynk.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/textPrimary"
                    android:layout_marginBottom="10dp" />

                <!-- Phone -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textColor="@color/textMuted"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvPhone"
                    style="@style/TextAppearance.EVynk.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/textPrimary"
                    android:layout_marginBottom="10dp" />

                <!-- Status -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textColor="@color/textMuted"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvStatus"
                    style="@style/TextAppearance.EVynk.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/textPrimary" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Primary action -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEdit"
            style="@style/Widget.EVynk.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Edit profile" />

        <!-- Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <!-- Secondary (outlined) action -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            style="@style/Widget.EVynk.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log out"
            android:textAllCaps="false"
            android:backgroundTint="@color/surface"
            android:textColor="@color/textPrimary"
            app:strokeColor="@color/outline"
            app:strokeWidth="1dp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
