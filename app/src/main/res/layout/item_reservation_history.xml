<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#151A21"
    app:cardCornerRadius="12dp"
    app:strokeColor="#2E3743"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvOwnerNic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owner NIC: 200145678V"
            android:textColor="#E6EAF0"
            android:textStyle="bold"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvStatusBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Completed"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:background="@drawable/bg_badge_completed" />

            <TextView
                android:id="@+id/tvReservationAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" â€¢ 2025-10-25 08:50"
                android:textColor="#A5ADBA"
                android:textSize="14sp"
                android:layout_marginStart="6dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvStationId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Station: 64f1ab..."
            android:textColor="#A5ADBA"
            android:textSize="13sp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
