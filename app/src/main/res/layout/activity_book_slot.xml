<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0F14"
    android:orientation="vertical">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#0D0F14"
        app:title="Book Reservation"
        app:titleTextColor="#E6EAF0"
        app:navigationIcon="@drawable/backarrow" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Station -->
            <TextView
                android:text="Select Charging Station"
                android:textColor="#E6EAF0"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_card_inset"
                android:padding="6dp"
                android:gravity="center_vertical"
                android:clipToOutline="true"
                android:backgroundTintMode="add"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/location"
                    android:layout_marginStart="10dp"
                    app:tint="#FFFFFF" />

                <EditText
                    android:id="@+id/edtStationDisplay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:hint="Pick a station..."
                    android:textColor="#E6EAF0"
                    android:textColorHint="#7C8796"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:inputType="none" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPickStation"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Pick"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#00C853"
                    android:layout_marginEnd="6dp"
                    app:cornerRadius="20dp" />
            </LinearLayout>

            <!-- Date & Time -->
            <TextView
                android:text="Select Date And Time"
                android:textColor="#E6EAF0"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPickDate"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Pick Date"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_card_inset"
                    app:icon="@drawable/ic_calendar"
                    app:iconTint="#00C853"
                    app:iconPadding="8dp"
                    app:cornerRadius="12dp" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPickTime"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Pick Time"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_card_inset"
                    app:icon="@drawable/clock"
                    app:iconTint="#00C853"
                    app:iconPadding="8dp"
                    app:cornerRadius="12dp" />
            </LinearLayout>

            <!-- FIXED: Display picked date/time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="—"
                    android:textColor="#E6EAF0"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="—"
                    android:textColor="#E6EAF0"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Booking Summary Card -->
            <!-- Booking Summary Card (clean + structured) -->
            <LinearLayout
                android:id="@+id/summaryCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card_inset"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:clipToOutline="true">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/reciept"
                        app:tint="#FFFFFF" />

                    <TextView
                        android:id="@+id/summaryTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Booking Summary"
                        android:textColor="#E6EAF0"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#27303A"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp" />

                <!-- Row: Station -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/location"
                        app:tint="#FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Station"
                        android:textColor="#A5ADBA"
                        android:textSize="13sp"
                        android:layout_marginStart="8dp" />

                    <TextView
                        android:id="@+id/summaryStation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="—"
                        android:textColor="#E6EAF0"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>

                <!-- Hairline -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#27303A"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp" />

                <!-- Row: Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/calendar"
                        app:tint="#FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textColor="#A5ADBA"
                        android:textSize="13sp"
                        android:layout_marginStart="8dp" />

                    <TextView
                        android:id="@+id/summaryDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="—"
                        android:textColor="#E6EAF0"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Hairline -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#27303A"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp" />

                <!-- Row: Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/clock"
                        app:tint="#FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:textColor="#A5ADBA"
                        android:textSize="13sp"
                        android:layout_marginStart="8dp" />

                    <TextView
                        android:id="@+id/summaryTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="—"
                        android:textColor="#E6EAF0"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>


            <!-- Submit -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Confirm Booking"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:backgroundTint="#00C853"
                app:cornerRadius="14dp" />

            <ProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
