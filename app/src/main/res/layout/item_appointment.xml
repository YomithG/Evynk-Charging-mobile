<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#151A21"
    app:cardCornerRadius="8dp"
    app:strokeColor="#2E3743"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvOwnerNic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owner NIC: 200145678V"
            android:textColor="#E6EAF0"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Active"
            android:textColor="#A5ADBA"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvReservationAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reserved at: 2025-10-25T04:02:00Z"
            android:textColor="#A5ADBA"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
