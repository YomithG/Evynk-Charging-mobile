<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#151A21"
    app:cardCornerRadius="12dp"
    app:strokeColor="#2E3743"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvOwnerNic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owner NIC: 200145678V"
            android:textColor="#E6EAF0"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Active"
            android:textColor="#A5ADBA"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvReservationAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reserved at: 2025-10-25T04:02:00Z"
            android:textColor="#A5ADBA"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2E3743"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnComplete"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:text="Complete"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                app:backgroundTint="@null"
                android:background="@drawable/btn_complete"
                app:cornerRadius="10dp"
                app:rippleColor="#66FFFFFF" />

            <Space
                android:layout_width="12dp"
                android:layout_height="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                app:backgroundTint="@null"
                android:background="@drawable/btn_cancel"
                app:cornerRadius="10dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
