<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#1FFFFFFF"> <!-- subtle white ripple overlay -->

    <item>
        <shape android:shape="rectangle">
            <!-- Dark gray fill (you can adjust the tone to match your theme) -->
            <solid android:color="#262B32" />
            <corners android:radius="12dp" />

            <!-- Slight border to make it stand out -->
            <stroke
                android:width="1dp"
                android:color="#3A4048" />

            <padding
                android:left="10dp"
                android:top="8dp"
                android:right="10dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <!-- Pressed overlay (darken effect) -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#22000000" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</ripple>
