<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Dark surface background -->
    <solid android:color="@color/card" />

    <!-- Subtle border stroke -->
    <stroke
        android:width="1dp"
        android:color="#22FFFFFF" />

    <!-- Inner padding shadow-like inset -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

    <!-- Optional slight shadow gradient -->
    <gradient
        android:startColor="#1AFFFFFF"
        android:endColor="#00000000"
        android:angle="90" />
</shape>
